
<div class="item weapon-grid" data-item-id="{{weapon.id}}">

  {{!-- Weapon Image --}}
  <div class="weapon-image">
    <img alt="{{weapon.name}}" src="{{weapon.img}}"/>
    {{#if weapon.system.isUpgraded }}
        <i class="text-super fa-solid fa-square-caret-up"></i>
      {{/if}}
  </div>

  {{!-- Weapon Name --}}
  <div class="weapon-name">
    <a class="name
              item-edit
              text-semi
              {{#if (cprCompare (cprGetProp actor "type") '===' "mook")}}
                deletable
                changeable
              {{/if}}"
       {{#if (cprCompare (cprGetProp actor "type") '===' "mook")}}
         tabindex="0"
       {{/if}}
       data-item-id="{{weapon.id}}"
       data-tooltip="{{localize "CPR.mookSheet.items.clickToViewItem"}}
         <br/>
         {{localize "CPR.actorSheets.commonActions.ctrlClickToSendToChat"}}
         <br/>
         {{#if (cprCompare (cprGetProp actor "type") '===' "mook")}}
           {{localize "CPR.mookSheet.items.pressDeleteToDelete"}}
         {{/if}}
       ">
      {{ weapon.name }}
    </a>
  </div>

  {{!-- Ammo Ammo Details --}}
  <div class="weapon-ammo">
    {{#if weapon.system.isRanged}}
      {{#if weapon.system.hasAmmoLoaded}}
        {{#with weapon.system.loadedAmmo as |ammo|}}
          {{localize (cprFindConfigValue "ammoTypes" ammo.system.type)}}:
        {{/with}}
        {{weapon.system.magazine.value}}
        /
        {{cprApplyUpgrade weapon weapon.system.magazine.max "magazine"}}
      {{else}}
        {{localize "CPR.mookSheet.items.unloaded"}}
      {{/if}}
    {{else}}
      {{localize "CPR.global.itemType.skill.meleeWeapon"}}
    {{/if}}
  </div>

  {{!-- Weapons Stats --}}
  <div class="weapon-info">

    {{!-- Rate of Fire --}}
    <span class="text-pill">
      {{localize "CPR.itemSheet.weapon.rof"}}
      {{cprApplyUpgrade weapon weapon.system.rof "rof"}}
    </span>

    {{!-- Attack Modifier --}}
    {{#if (cprCompare (cprApplyUpgrade weapon weapon.system.attackmod "weapon.attackmod") ">" "0")}}
      <span class="text-pill">
        +{{cprApplyUpgrade weapon weapon.system.attackmod "weapon.attackmod"}}
        {{localize "CPR.actorSheets.fightWeaponStats.toAttack"}}
      </span>
    {{else if (cprCompare (cprApplyUpgrade weapon weapon.system.attackmod "weapon.attackmod") "<" "0")}}
      <span class="text-pill">
        {{cprApplyUpgrade weapon weapon.system.attackmod "weapon.attackmod"}}
        {{localize "CPR.actorSheets.fightWeaponStats.toAttack"}}
      </span>
    {{/if}}

    {{!-- Damage --}}
    <span
      {{#if (cprCompare (cprGetAmmoOverrideProp weapon.system.loadedAmmo "damage" "mode") "!==" "none")}}
        class="text-pill text-italic" data-tooltip="{{localize "CPR.actorSheets.fightTab.ammoDamageOverrideTooltip"}}">
      {{else}}
        class="text-pill">
      {{/if}}
      {{localize "CPR.global.generic.damage"}}
      {{cprGetWeaponDamage weapon}}
    </span>

    {{!-- Ablation --}}
    {{#if weapon.system.hasAmmoLoaded}}
      {{#with weapon.system.loadedAmmo as |ammo|}}
        {{#if (cprCompare ammo.system.ablationValue "!==" 1)}}
          <span class="text-pill">
            {{localize "CPR.global.generic.ablation"}}
            {{ammo.system.ablationValue}}
          </span>
        {{/if}}
      {{/with}}
    {{/if}}

    {{!-- Hand Required --}}
    {{#if (cprApplyUpgrade weapon weapon.system.handsReq "handsReq")}}
      <span class="text-pill">
        {{localize "CPR.actorSheets.fireModes.handsRequiredShort"}}
        {{cprApplyUpgrade weapon weapon.system.handsReq "handsReq"}}
      </span>
    {{/if}}

  </div>

  {{!-- Weapon Firing Modes --}}
  <div class="weapon-mode text-padding-sides-small">
    <ul>
      {{!-- Aimed Shot --}}
      <li>
        <span class="text-padding-sides-small">
          {{localize "CPR.actorSheets.fireModes.aim"}}
        </span>
        <a class="fire-checkbox" data-fire-mode="aimed" data-item-id="{{weapon.id}}">
          {{#if (cprFireMode actor "aimed" weapon.id) }}
            <i class="far fa-circle-dot text-padding-right-smallest"></i>
          {{else}}
            <i class="far fa-circle text-padding-right-smallest"></i>
          {{/if}}
        </a>
      </li>
      {{!-- Autofire --}}
      {{#if (cprCompare weapon.system.fireModes.autoFire ">" 0)}}
        <li>
          <span
            {{#if (cprCompare (cprGetAmmoOverrideProp weapon.system.loadedAmmo "autofire" "mode") "!==" "none")}}
              class="text-padding-right-small text-italic" data-tooltip="{{localize "CPR.actorSheets.fightTab.ammoAutofireOverrideTooltip"}}">
            {{else}}
              class="text-padding-right-small">
            {{/if}}
            {{localize "CPR.actorSheets.fireModes.autoFire"}}
            ({{cprGetWeaponAutofireMax weapon}})
          </span>
          <a class="fire-checkbox" data-fire-mode="autofire" data-item-id="{{weapon.id}}">
            {{#if (cprFireMode actor "autofire" weapon.id) }}
              <i class="far fa-circle-dot text-padding-right-smallest"></i>
            {{else}}
              <i class="far fa-circle text-padding-right-smallest"></i>
            {{/if}}
          </a>
        </li>
      {{/if}}
      {{!-- Suppressive Fire --}}
      {{#if weapon.system.fireModes.suppressiveFire}}
        <li>
          <span class="text-padding-right-small">
            {{localize "CPR.actorSheets.fireModes.suppressiveFireShort"}}
          </span>
          <a class="fire-checkbox" data-fire-mode="suppressive" data-item-id="{{weapon.id}}">
            {{#if (cprFireMode actor "suppressive" weapon.id) }}
              <i class="far fa-circle-dot text-padding-right-smallest"></i>
            {{else}}
              <i class="far fa-circle text-padding-right-smallest"></i>
            {{/if}}
          </a>
        </li>
      {{/if}}
    </ul>
  </div>

  {{!-- Weapon Actions --}}
  <div class="weapon-actions">
    {{#if weapon.system.isRanged}}
      <ul class="items-list">
        <li class="text-padding-sides-smaller">
          {{> "systems/cyberpunk-red-core/templates/actor/mixin/actions/cpr-dv-glyph.hbs" weapon=weapon isTokenSheet=isTokenSheet}}
        </li>
        <li class="text-padding-sides-smaller">
          {{> "systems/cyberpunk-red-core/templates/actor/mixin/actions/cpr-changeAmmo-glyph.hbs" weapon}}
        </li>
        <li class="text-padding-sides-smaller">
          {{> "systems/cyberpunk-red-core/templates/actor/mixin/actions/cpr-reload-glyph.hbs" weapon}}
        </li>
      </ul>
    {{/if}}
  </div>

  {{!-- Roll Attack--}}
  <div class="weapon-attack text-largest">
    <a class="rollable" data-roll-type="attack" data-item-id="{{weapon.id}}">
      <i class="fas fa-hand-fist red-fg"
         data-tooltip="{{localize "CPR.characterSheet.bottomPane.fight.rollAnAttack"}}">
      </i>
    </a>
  </div>

  {{!-- Roll Damage --}}
  <div class="weapon-damage text-largest">
    {{#if (cprCompare (cprFireFlag actor "suppressive" weapon.id) "!==" "checked") }}
      <a class="rollable damage-roll-{{weapon.id}}"
         data-roll-type="damage"
         data-item-id="{{weapon.id}}"
         data-damage="{{weapon.system.damage}}">
        <i class="fas fa-droplet red-fg"
           data-tooltip="{{localize "CPR.actorSheets.commonActions.rollDamage"}}">
        </i>
      </a>
    {{/if}}
  </div>
</div>
